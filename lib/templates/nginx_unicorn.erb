upstream unicorn_<%= fetch :application %>_server {
  server unix:/tmp/unicorn.<%= fetch :application %>.sock fail_timeout=30;
}

server {
  server_name paysagesunrise.com.br www.paysagesunrise.com.br;
  listen 80 default_server;

  access_log <%= shared_path %>/access.log;
  error_log  <%= shared_path %>/error.log;

  root <%= current_path %>/public;

  try_files $uri/index.html $uri.html $uri @app;

  location @app {
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unicorn_<%= fetch :application %>_server;
  }
}
